{
  "info": {
    "_postman_id": "digihealth-collection-2025",
    "name": "DigiHealth API - 50% Implementation Demo",
    "description": "Postman collection for testing DigiHealth backend APIs - demonstration of doctor approval workflow, patient registration, and appointment booking.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register Doctor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"doctorId\", jsonData.id);",
                  "    pm.environment.set(\"doctorEmail\", pm.request.body.raw);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.smith@example.com\",\n  \"password\": \"Password123!\",\n  \"fullName\": \"Dr. Smith\",\n  \"role\": \"DOCTOR\",\n  \"specialization\": \"Cardiology\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "description": "Register a new doctor. Doctor will be created with isApproved=false."
          },
          "response": []
        },
        {
          "name": "Register Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"Password123!\",\n  \"fullName\": \"John Doe\",\n  \"role\": \"PATIENT\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            },
            "description": "Register a new patient. Patient can login immediately after registration."
          },
          "response": []
        },
        {
          "name": "Doctor Login (Before Approval) - Should Fail",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.smith@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Doctor tries to login before approval - should return 403 FORBIDDEN"
          },
          "response": []
        },
        {
          "name": "Patient Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"patientToken\", jsonData.token);",
                  "    pm.environment.set(\"patientId\", jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Patient login - should succeed immediately"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Admin Dashboard - Doctor Approval",
      "item": [
        {
          "name": "Get Pending Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/doctors/pending",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "doctors",
                "pending"
              ]
            },
            "description": "Get list of pending doctor approvals (isApproved=false)"
          },
          "response": []
        },
        {
          "name": "Get Approved Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/doctors/approved",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "doctors",
                "approved"
              ]
            },
            "description": "Get list of approved doctors (isApproved=true)"
          },
          "response": []
        },
        {
          "name": "Approve Doctor",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/doctors/{{doctorId}}/approve",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "doctors",
                "{{doctorId}}",
                "approve"
              ]
            },
            "description": "Admin approves a doctor - sets isApproved=true. Doctor can now login."
          },
          "response": []
        },
        {
          "name": "Reject Doctor",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/doctors/{{doctorId}}/reject",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "doctors",
                "{{doctorId}}",
                "reject"
              ]
            },
            "description": "Admin rejects a doctor - sets isApproved=false and isActive=false (deactivates account)"
          },
          "response": []
        },
        {
          "name": "Doctor Login (After Approval) - Should Succeed",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"doctorToken\", jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.smith@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "After admin approval, doctor can now login successfully"
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Patient - Get Available Doctors",
      "item": [
        {
          "name": "Get All Approved Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{patientToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/appointments/doctors",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "appointments",
                "doctors"
              ]
            },
            "description": "Get list of all approved doctors for patient to book appointments with"
          },
          "response": []
        },
        {
          "name": "Get Doctor Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{patientToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/appointments/doctors/{{doctorId}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "appointments",
                "doctors",
                "{{doctorId}}"
              ]
            },
            "description": "Get details of a specific doctor (name, specialization, availability)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Patient - Book Appointment",
      "item": [
        {
          "name": "Book Appointment with Doctor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{patientToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"{{doctorId}}\",\n  \"appointmentDate\": \"2025-02-25\",\n  \"appointmentTime\": \"09:00\",\n  \"reason\": \"Regular checkup for cardiac condition\",\n  \"symptoms\": \"Mild chest discomfort, normal blood pressure\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/appointments/book",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "appointments",
                "book"
              ]
            },
            "description": "Patient books an appointment with an approved doctor. Appointment created with SCHEDULED status."
          },
          "response": []
        }
      ]
    },
    {
      "name": "5. Doctor - View Appointments",
      "item": [
        {
          "name": "Get My Appointments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/appointments/my",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "appointments",
                "my"
              ]
            },
            "description": "Doctor views all appointments scheduled with them"
          },
          "response": []
        },
        {
          "name": "Update Appointment Status to CONFIRMED",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"CONFIRMED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/appointments/{{appointmentId}}/status",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "appointments",
                "{{appointmentId}}",
                "status"
              ]
            },
            "description": "Doctor confirms an appointment (changes status from SCHEDULED to CONFIRMED)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "6. Admin - Patient Management",
      "item": [
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/patients",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "patients"
              ]
            },
            "description": "Admin views all registered patients"
          },
          "response": []
        },
        {
          "name": "Get Patient Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/admin/patients/{{patientId}}",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "admin",
                "patients",
                "{{patientId}}"
              ]
            },
            "description": "Admin views details of a specific patient"
          },
          "response": []
        }
      ]
    }
